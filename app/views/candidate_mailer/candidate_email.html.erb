<html>
  <body>

    <p> <%= @candidate.blurb  %> </p>
    <table border="true">
      <tr>
        <td>Job</td>
        <td><%=@candidate.job%></td>
      </tr>
      <tr>
        <td>Company</td>
        <td><%=@candidate.company%></td>
      </tr>
      <tr>
        <td>Email</td>
        <td><%=@candidate.email%></td>
      </tr>
      <tr>
        <td>Ideal Role</td>
        <td><%=@candidate.ideal_role%></td>
      </tr>
      <% if @candidate.website.present? %>
        <tr>
          <td><%=@candidate.website.text%></td>
          <td><%=@candidate.website.href%></td>
        </tr>
      <% end %>
      <% if @candidate.resume.present? %>
        <tr>
          <td>Resume</td>
          <td><%=@candidate.resume.href%></td>
        </tr>
      <%end%>
    </table>
  </body>
</html>













